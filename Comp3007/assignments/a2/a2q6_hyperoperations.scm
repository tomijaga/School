;The purpose of this function is create a hyperoperation
;@params x = the operation
;test (my-mult 3 4) => 12
;test (my-exp 2 4) => 16
;test (my-tetra 2 4) => 256
;test (my-quad 2 4) => 

(define (hyper x)
  (define (iter value content count n)
    (if (>= count n)
        value
        (iter (x value content) content (+ count 1) n)))
  (lambda (a b)
  (iter a a 1 b))
  )

; a hyper operation of rank 1
(define my-mult (hyper +))
   (my-mult 3 4)

; a hyper operation of rank 2
 (define my-exp (hyper my-mult))
   (my-exp 2 4)

; a hyper operation of rank 3
(define my-tetra (hyper my-exp))
   (my-tetra 2 4)

; a hyper operation of rank 4
(define my-quad (hyper my-tetra))
   (my-quad 2 4)